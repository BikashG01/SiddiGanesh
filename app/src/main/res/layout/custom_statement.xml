<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deposit"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    >
    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/statement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="@color/textwhite"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/statement_ref"
            android:layout_below="@+id/statement_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="References"
            android:textColor="@color/textwhite"
            />
        <TextView
            android:id="@+id/blc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/balance_total"
            android:paddingBottom="5dp"
            android:textColor="@color/textwhite"
            />
        <TextView
            android:id="@+id/statement_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="2dp"
            android:text="Withdraw"
            android:textColor="@color/textwhite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Withdraw"
            android:textStyle="bold"
            android:background="@color/transationinfo"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/statement_status"
            android:textColor="@color/textwhite" />

        <TextView
            android:id="@+id/balance_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/npr"
            android:text="@string/amount"
            android:textColor="@color/textwhite" />
        <TextView
            android:id="@+id/npr"
            android:layout_below="@+id/blc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/statement_blc"
            android:text="NPR. "
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/statement_blc"
            android:layout_below="@+id/blc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/amount"
            android:textColor="@color/textwhite"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/top_relative"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transationinfo"
        />

</RelativeLayout>
