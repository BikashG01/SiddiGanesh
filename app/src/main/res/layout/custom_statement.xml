<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deposit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_sharp_corners"
        android:padding="6dp">

        <TextView
            android:id="@+id/statement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Date"
            android:textColor="@color/textwhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statement_status"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_statius"
            android:paddingBottom="5dp"
            android:text="Withdraw"
            android:textColor="@color/textwhite" />

        <TextView
            android:id="@+id/statement_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statement_date"
            android:text="Referencec"
            android:textColor="@color/transationinfo" />

        <TextView
            android:id="@+id/npr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/statement_blc"
            android:paddingBottom="5dp"
            android:text="NPR. "
            android:textColor="@color/textwhite" />

        <TextView
            android:id="@+id/statement_blc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:text="0000000"
            android:textColor="@color/textwhite" />

        <TextView
            android:id="@+id/blc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/npr"
            android:layout_toLeftOf="@+id/balance_total"
            android:text="BALANCE "
            android:textColor="@color/textwhite" />

        <TextView
            android:id="@+id/balance_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/npr"
            android:text="00000"
            android:textColor="@color/textwhite" />

    </RelativeLayout>

</RelativeLayout>
